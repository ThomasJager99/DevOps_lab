version: "3.9"

services:
  mysql:
    image: mysql:8.0
    container_name: mysql
    restart: unless-stopped

    env_file:
      - .env

    envitonment:
     MYSQL_ROOT_PASSWORD: ${MYSQL_ROOT_PASSWORD} 
     MYSQL_DATABASE: ${MYSQL_DATABASE}
     MYSQL_USER: ${MYSQL_USER}
     MYSQL_PASSWORD: ${MYSQL_PASSWORD}


    ports:
      - "3306:3306"

    volumes:
      - ${MYSQL_DATA}:/var/lib/mysql

    networks:
      - mysql_network

volumes:
  mysql_data:

networks:
  mysql_network:
    external: true
