version: "3.9"

services:
  glances:
    image: nicolargo/glances:latest
    environment:
      - GLANCES_OPT=-w
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock:ro
      - /proc:/host/proc:ro
      - /sys:/host/sys:ro
    ports:
      - "${GLANCES_PORT}:61208"
    restart: unless-stopped
    networks:
      - internal

networks:
  internal:
    driver: bridge
