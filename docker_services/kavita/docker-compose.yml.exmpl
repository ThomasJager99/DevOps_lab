version: "3.9"

services:
  kavita:
    image: jvmilazz0/kavita:latest
    ports:
      - "${KAVITA_PORT}:5000"
    volumes:
      - "${KAVITA_DATA}:/kavita/data"
      - "${KAVITA_CONFIG}:/kavita/config"
      - "${BOOKS_PATH}:/media:ro"
    restart: unless-stopped
    networks:
      - internal

networks:
  internal:
    driver: bridge
